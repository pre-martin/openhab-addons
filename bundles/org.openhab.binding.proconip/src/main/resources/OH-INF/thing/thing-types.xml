	<!-- Sample Thing Type -->
	<thing-type id="device">
		<label>ProCon.IP Device</label>
		<description>A thing for communication with a ProCon.IP device.</description>

		<channel-groups>
			<channel-group id="adcs" typeId="adcs"/>
			<channel-group id="electrodes" typeId="electrodes"/>
			<channel-group id="temperatures" typeId="temperatures"/>
			<channel-group id="relais" typeId="relais"/>
			<channel-group id="digitalInputs" typeId="digitalInputs"/>
			<channel-group id="externalRelais" typeId="externalRelais"/>
			<channel-group id="dosing" typeId="dosing"/>
		</channel-groups>

		<properties>
			<property name="firmwareVersion">N/A</property>
			<property name="uptime">N/A</property>
		</properties>

		<config-description>
			<parameter name="hostname" type="text" required="true">
				<context>network-address</context>
				<label>Hostname</label>
				<description>URL of the ProCon.IP, e.g. http://proconip.mynet.mydomain or http://10.10.10.10</description>
			</parameter>
			<parameter name="refreshInterval" type="integer" unit="s" min="30">
				<label>Refresh Interval</label>
				<description>Interval at which the ProCon.IP is polled (in sec.)</description>
				<default>60</default>
			</parameter>
		</config-description>
	</thing-type>

